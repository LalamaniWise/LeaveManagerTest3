@model IEnumerable<LeaveManagerTest3.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<br />
<h4>Leaves Requested</h4>
<br />
<p>
    @Html.ActionLink("Request a leave", "Create")
</p>
<br />

@if (User.IsInRole("Admin"))
{
    <label style="font-size:larger">@ViewBag.Count Pending Leave Request(s)  </label>

}

<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason_for_Leave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Starting)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ending)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason_for_Leave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Starting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ending)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Respond", "Edit", new { id = item.Id })

                }

                @if (User.IsInRole("Employee"))
                {
                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                }
                @if (User.IsInRole("Employee"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                }




            </td>
        </tr>
    }

</table>
